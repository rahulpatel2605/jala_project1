pipeline {
    agent any

    environment {
        ACR_NAME = 'jalaACR'
        ACR_RESOURCE_GROUP = 'jalap1-rg'
        ACR_REGISTRY_URL = "jalaacr.azurecr.io"
        IMAGE_NAME = "my-node-app"
        IMAGE_TAG = "${env.BUILD_NUMBER}"
        AZURE_CREDENTIALS_ID = 'Azure_ACR_Credentials'
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."

                    // Tag the image for Azure Container Registry
                    sh "docker tag ${IMAGE_NAME}:${IMAGE_TAG} ${ACR_REGISTRY_URL}/${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }
    }

    post {
        success {
            // Push the image to Azure Container Registry
            script {
                withCredentials([azureServicePrincipal(credentialsId: AZURE_CREDENTIALS_ID, variable: 'AZURE_CREDENTIALS')]) {
                    sh "az acr login --name ${ACR_NAME} --resource-group ${ACR_RESOURCE_GROUP}"
                    sh "docker push ${ACR_REGISTRY_URL}/${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }
    }
}
